{% extends 'base.html.twig' %}

{% block title %} Connexion ! {% endblock %}

{% block contenu %}
    <div class="container-fluid" >  
        <div class="row" >  
            <div style="text-align: center; margin: 0 auto;">  
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
                        </div>
                    {% endif %}
                    <div class="container">   
                        <div class=""  >   

                            <h1 class="h3 mb-3 font-weight-normal">Connectez-vous </h1>
                            <label for="inputUsername">Pseudo </label>
                            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"
                                   >

                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html
                                        #}

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Se rappeler de moi
                                </label>
                            </div>
                            <div>
                                <a  href="{{ path('app_forgotten_password') }}">Mot de passe oubli√©</a>
                            </div>
                            <div>
                                <a  href="{{ path('signin') }}">S'inscrire</a>
                            </div>
                            <br>
                            <button class="btn btn-lg btn-primary" type="submit">
                                Connexion
                            </button>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </div>

{% endblock %}
