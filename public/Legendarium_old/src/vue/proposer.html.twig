{% extends "base.html.twig" %}
{% block title %} {{ parent() }} - Proposer un JDR{% endblock %}
{% block contenu %}
    <h1>Formulaire de proposition de jeu de rôle</h1>
    <div class='container-fluid'>

        {% if form.valide is defined %} 
            {% if form.valide == true %}
                <h1 class="h3 mb-3">La proposition {{form.nom}}a bien été prise en compte</h1>
                {% if form.resul == true %}
                    {% include 'jeuReussi.html.twig' %}
                {% else %}
                    {% include 'jeuEchec.html.twig' %}
                {% endif %}
            {% else %}
                <h1 class="h3 mb-3">Echec de l'inscription</h1> 
                <h1 class="h3 mb-3">Erreur : {{form.message}}</h1>
                <h1 class="h3 mb-3"><a href="index.php?page=proposer">Retourner sur la page de proposition</a></h1>    
            {% endif %} 
        {% else %} 
            <div class="container" id="log-in-form">
                <div class="heading">
                    <hr>
                    <h1>Proposer votre jeu de rôle</h1>
                </div>
                <form action="index.php?page=proposer" method="post" enctype="application/x-www-form-urlencoded">
                    <div class="form-group">
                        <input type="text" id="nomJeu" name="nomJeu" class="form-control" placeholder="Nom du jeu" required autofocus>
                    </div>
                    <textarea rows='4'cols='119'class="form-group" name="synopsis" placeholder='Synopsis du jeu'></textarea>
                    <div class="form-group">
                        <input type="text" id="nbJoueurMax" name="nbJoueurMax" class="form-control" placeholder="Nombre de joueurs maximum" required>
                    </div>
                    <div class="form-group">
                        <input type="date" id="dateEvenement" name="dateEvenement" class="form-control" placeholder="Date" required>
                    </div>
                    <div class="form-group">
                        <input type="hidden" id="idRoleJeu" name="idRoleJeu" class="form-control" value="0" required>
                    </div>
                    <div class="form-group form-group-btn">
                        <button type="submit" name="btProposer" class="btn btn-success btn-lg">Proposer votre jeu !</button>
                    </div>
                </form>
                <hr>
            </div>
        </div>
    {% endif %}     
{% endblock %}