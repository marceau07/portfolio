{% extends 'base.html.twig' %}
{% block title %}Modifier un mode paiement !
{% endblock %}
{% block contenu %}
   <div class="container">
 <h1> Modifier une méthode de paiement</h1>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_label(form.abonnement, 'Abonnement:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}        
        <div class="col-sm-10"> 
            {{ form_errors(form.abonnement) }}
            {{ form_widget(form.abonnement) }}
            {{ form_help(form.abonnement) }} 
        </div>
    </div>
   <div class="form-group">
        {{ form_label(form.dateDeb, 'Début de l\'abonnement:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}        
        <div class="col-sm-10"> 
            {{ form_errors(form.dateDeb) }}
            {{ form_widget(form.dateDeb) }}
            {{ form_help(form.dateDeb) }} 
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.dateFin, 'Fin de l\'abonnement:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}        
        <div class="col-sm-10"> 
            {{ form_errors(form.dateFin) }}
            {{ form_widget(form.dateFin) }}
            {{ form_help(form.dateFin) }} 
        </div>
    </div>
    {{ form_widget(form.save) }} 
</div>
{{ form_end(form) }}

{% endblock %}