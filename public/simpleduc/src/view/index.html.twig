                        <div class="panel-body violet">
                            <ul class='list-unstyled'>
                                <li><a href="index.php?page=user" class="violet">Gestion des utilisateurs</a></li>
                                <li><a href="index.php?page=team" class="violet">Gestion des équipes</a></li>
                            </ul>    
                        </div>    
                    </div>
                {% endif %}    
            {% endif %} 
        </div>
    </div>

{% endblock %} 

