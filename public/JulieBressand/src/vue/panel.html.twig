        <div class="content-wrapper">
            <div class="container-fluid">
                {% block panel %}
                    <div class="row pad-botm">
                        <div class="col-md-12">
                            <h4 class="header-line">Gestion du site</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="panel panel-success text-justify">
                                <div class="panel-heading h4">
                                    Les clients
                                </div>
                                <div class="panel-body">
                                    <table id="table" class="table table-responsive table-striped table-condensed table-sm">
                                        <thead>
                                            <tr>
                                                <th class="col-lg-3 th-sm">Nom</th>
                                                <th class="col-lg-3 th-sm">Prénom</th>
                                                <th class="col-lg-3 th-sm">Téléphone</th>
                                                <th class="col-lg-3 th-sm">E-mail</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for u in form.utilisateur %}
                                                <tr>
                                                    <td class="col-lg-3">{{ u.nom|upper }}</td>
                                                    <td class="col-lg-3">{{ u.prenom|capitalize }}</td>
                                                    <td class="col-lg-3">{{ u.telephone }}</td>
                                                    <td class="col-lg-3">{{ u.email }}</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class='row'>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="panel panel-warning">
                                <div class="panel-heading">
                                    Dernières actualités
                                </div>
                                <div class="panel-body">
                                    <ul class="media-list">
                                        {% for a in form.actualite %}
                                            <li class="media">
                                                <div class="pull-left">
                                                    <img class="media-object img-circle img-comments" src="../web/images/person_7.gif" alt="Julie Bressand"/>
                                                </div>
                                                <div class="media-body">
                                                    <h4 class="media-heading">{{ a.titre }}</h4>
                                                    <p>
                                                        {{ a.message }}
                                                    </p>
                                                </div>
                                                <p class="pull-right">
                                                    {{ a.date|date('d/m/Y') }}
                                                </p>
                                            </li>
                                            <hr>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="panel panel-warning">
                                <div class="panel-heading">
                                    Derniers avis
                                </div>
                                <div class="panel-body">
                                    <ul class="media-list">
                                        {% for av in form.avis %}
                                            <li class="media">
                                                <p class="pull-left" href="#">
                                                    <p>{{ av.nom|upper }} {{ av.prenom|capitalize }}</p>
                                                </p>
                                                <div class="media-body">
                                                    <h4 class="media-heading">{{ av.titre }}</h4>
                                                    <p>
                                                        {{ av.message }}
                                                    </p>
                                                </div>
                                                <p class="pull-right">
                                                    le {{ av.date|date('d/m/Y') }}
                                                </p>
                                            </li>
                                            <hr>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class='container-fluid'>
                    <div class='row'>
                        <div class="col-md-6">
                            <div class="panel panel-info">
                                <div class="panel-heading">
                                    Ajouter une actualité
                                </div>
                                <div class="panel-body">                                                
                                    {% if form.actu is defined %}
                                        {% if form.actu == true %}
                                            <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1><br><br>
                                        {% else %}
                                            <h1 class="h3 mb-3 font-weight-normal">Erreur : {{form.message}}</h1><br><br>
                                        {% endif %}
                                    {% else %}
                                        <form method="post" role="form">
                                            <div class="form-group">
                                                <label>Entrer le titre</label>
                                                <input class="form-control" name="titre" type="text" />
                                            </div>
                                            <div class="form-group">
                                                <label>Entrer le message</label>
                                                <input class="form-control" type="text" name="message" style="min-height:100px;" />
                                            </div>
                                            <button type="submit" name="btAjouter" class="btn btn-success">Ajouter l'actualité </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="panel panel-info">
                                <div class="panel-heading">Ajouter une FAQ
                                </div>
                                <div class="panel-body">
                                    {% if form.faq is defined %}
                                        {% if form.faq == true %}
                                            <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1><br><br>
                                        {% else %}
                                            <h1 class="h3 mb-3 font-weight-normal">Erreur : {{form.message}}</h1><br><br>
                                        {% endif %}
                                    {% else %}
                                        <form method="post" role="form">
                                            <div class="form-group">
                                                <label>Question ?</label>
                                                <input class="form-control" name="quest" type="text" />
                                            </div>
                                            <div class="form-group">
                                                <label>Réponse :</label>
                                                <input class="form-control" type="text" name="rep" style="min-height:100px;" />
                                            </div>
                                            <button type="submit" name="btAjouterFaq" class="btn btn-success">Ajouter la faq</button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="panel panel-info">
                                <div class="panel-heading">Envoyer un mail a tous les utilisateurs
                                </div>
                                <div class="panel-body">
                                    {% if form.mail is defined %}
                                        {% if form.mail == true %}
                                            <h1 class="h3 mb-3 font-weight-normal">Votre email a bien été envoyé à tous vos utilisateurs inscrits à la newsletter!</h1><br><br>
                                        {% else %}
                                            <h1 class="h3 mb-3 font-weight-normal">Un problème à eu lieu</h1><br>
                                            <h1 class="h3 mb-3 font-weight-normal">Erreur : {{form.message}}</h1><br><br>
                                        {% endif %}
                                    {% else %}
                                        <form method="post" role="form">
                                            <div class="form-group">
                                                <label>Objet</label>
                                                <input class="form-control" type="text" name="Message"/>
                                            </div>
                                            <div class="form-group">
                                                <label>Réponse :</label>
                                                <input class="form-control" type="text" name="Objet" style="min-height:100px;" />
                                            </div>
                                            <button type="submit" name="btEnvoyer" class="btn btn-success">Envoyer le mail</button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endblock %}
            </div>
        </div>
