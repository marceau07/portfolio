{% extends 'base.html.twig' %}
{% block title %}Modifier une date !
{% endblock %}
{% block contenu %}
    <style>       .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }  
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }</style>
      <div class="container">

        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.date, 'Date:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}        
            <div class="col-sm-10"> 
                {{ form_errors(form.date) }}
                {{ form_widget(form.date) }}
                {{ form_help(form.date) }} 
            </div>
        </div>
            {{ form_widget(form.save) }} 
        </div>
        {{ form_end(form) }}
    
{% endblock %}