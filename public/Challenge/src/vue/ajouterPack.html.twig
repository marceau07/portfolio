{#% extends "base.html.twig" %}

{% block title %} Ajouter un pack {% endblock %}
{% block contenu %}
    <div class="container">
        <form class="well form-horizontal" action="index.php?page=ajouterPack" method="post" id="contact_form">
            <fieldset>
                <legend>Ajouter une pack</legend>
                <div class="form-group"> 
                    <label class="col-md-4 control-label">Activité</label>
                    <div class="col-md-4 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                            <select name="activite" class="form-control selectpicker">
                                <option value="">Activités</option>
                                {% for a in listeA %}
                                    <option>{{a.nomAct}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="items">
                            <small>Vous ne trouvez pas votre activité ?<a href="index.php?page=ajouterActivite">&nbsp;Ajoutez en une !</a></small>
                        </div>
                    </div>

                    <div class="col-md-4 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                            <select name="materiel" class="form-control selectpicker">
                                <option value="">Matériels</option>
                                {% for m in listeM %}
                                    <option>{{m.nomMateriel}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="items">
                            <small>Vous ne trouvez pas votre matériel ?<a href="index.php?page=ajouterMateriel">&nbsp;Ajoutez en un !</a></small>
                        </div>
                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-warning" name="btAjouterPack">Ajouter un pack <span class="glyphicon glyphicon-send"></span></button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>


    <script src="../../web/js/modules/formAjouterClient.js" type="text/javascript"></script>

{% endblock %#}