            width: 6px; }
        </style>
        <!-- MDBootstrap Datatables  -->
        <link href="../web/mdb/css/addons/datatables.min.css" rel="stylesheet">
    {% endblock %}
    {% block panel %}
        <br/><br/><br/>
        <div class="container-wrapper">
        <div class="row text-justify">
            <div class='col-lg-12'>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>
                            Mes rendez-vous
                        </h4>
                    </div>
                    <div class="table-responsive">
                        <table id="table" class="table table-condensed table-responsive table-striped table-hover scrollbar-danger table-bordered table-primary">
                            <thead>
                                <tr>
                                    <th class="col-lg-1">Date</th>
                                    <th class="col-lg-1">Option</th>
                                    <th class="col-lg-1">Nom</th>
                                    <th class="col-lg-1">Prénom</th>
                                    <th class="col-lg-1">Heure</th>
                                    <th class="col-lg-1">Pseudo&nbsp;Skype</th>
                                    <th class="col-lg-1">Téléphone</th>
                                    <th class="col-lg-1">Adresse</th>
                                    <th class="col-lg-1">Message</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for rv in liste %}
                                    <tr>
                                        <th scope="row" class="col-lg-1">{% if date(form.date)|date('Y-m-d') == date(rv.date)|date('Y-m-d') %}<span style="background-color: red;">{{rv.date|date('Y-m-d')}}</span>{% else %}{{ rv.date|date('Y-m-d') }}{% endif %}</th>
                                        <td class="col-lg-1">{{rv.method}} </td>
                                        <td class="col-lg-1">{{rv.nom}} </td>
                                        <td class="col-lg-1">{{rv.prenom}} </td>
                                        <td class="col-lg-1">{{rv.horaireDeb}} </td>
                                        <td class="col-lg-1">{% if rv.pseudoskype is null %} -- {% else %} {{rv.pseudoskype}} {% endif %}</td>
                                        <td class="col-lg-1">{{rv.telephone}} </td>
                                        <td class="col-lg-1">{% if rv.adresse is null %} -- {% else %} {{rv.adresse}} {% endif %}</td>
                                        <td class="col-lg-1"><textarea cols="33" rows="3" autocapitalize="words" readonly>{{rv.message}}</textarea></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
{% endblock %}

{% block js %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- MDBootstrap Datatables  -->
    <script type="text/javascript" src="../web/mdb/js/addons/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#table').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
{% endblock %}
