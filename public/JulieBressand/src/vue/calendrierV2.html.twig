{% extends "base.html.twig" %}

{% block title %}
    {{ parent() }} - Prendre rendez-vous
{% endblock %}

{% block style %}
    <link rel="stylesheet" href="../web/css/stylus/calendrier.css">
{% endblock %}

{% block contenue %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 table table-condensed table-danger table-borderless table-sm">
                <div id="datepicker" class="calendar"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 table table-borderless table-sm">
                <div class="side">
                    <div class="row side-title">
                        Thursday 13, 2015
                    </div>
                    <div class="row time-pic">
                        <p>Pick a Time</p>
                        <div class="radio-option">
                            {% for h in form.horaire %}
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="optionsRadios" value="option1" required>
                                        {{ h.horaireDeb|date('H') }}h{{ h.horaireDeb|date('i') }} - {{ h.horaireFin }}
                                    </label>  
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <button class="btn btn-danger">Select</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block newsletter %}
{% endblock %}

{% block js %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script>
        /*$(function() {
         $("#datepicker").datepicker({
         firstDay: 1
         });
         
         });*/

        $(function () {

            var side = $('.side')
            $("#datepicker").datepicker({
                firstDay: 1,
                onSelect: function (date) {
                    side.animate({
                        width: 'toggle'
                    }, 2000);
                }
            });

        });
    </script>
{% endblock %}