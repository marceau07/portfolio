{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Accueil {% endblock %}

{% block contenu %} <h1>Gestion des types</h1>

    <div class="panel panel-default">
        <!-- Default panel contents -->

        <div class="panel-heading">Liste des types</div>
        <!-- Table -->

        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr>
                    <th>Libellé</th>
                    <th></th>
                    <th></th>
                </tr>

                {% for t in liste %}
                    <tr>
                        <td>{{t.libelle}}</td>
                        <td> 
                            <div class="btn-group btn-group-lg"><a href="index.php?page=modiftype&id={{t.id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            </div>
                        </td>
                        <td>
                            <div class="btn-group btn-group-lg"><a href="#"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></div>
                        </td>
                    </tr>
                {% endfor %}
            </table> {# empty Twig template #}
        </div>
    </div>

    <div class="h3 mb-3 font-weight-normal">
        <div class="panel panel-primary">

            <div class="panel-heading">Ajouter un type</div>

            <div class="panel-body">
                <form  class="form-signin" action="index.php?page=type" method="post" enctype="application/x-www-form-urlencoded">

                    <label for="inputLibelle" class="sr-only">Libellé:</label>
                    <input type="text" id="inputLibelle" name="inputLibelle" class="form-control" placeholder="Saisir un libelle" required autofocus>

                    <button class="btn btn-lg btn-primary btn-block" type="submit" name="btAjouter">Ajouter</button>
                </form>
            </div>    
        </div>
    </div>


{% endblock %}