{% extends 'base.html.twig' %}
{% block title %}Modifier un Quiz !
{% endblock %}
{% block contenu %}
   <div class="container">
 <h1> Modifier un quiz </h1>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_label(form.theme, 'Thème:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}        
        <div class="col-sm-10"> 
            {{ form_errors(form.theme) }}
            {{ form_widget(form.theme) }}
            {{ form_help(form.theme) }} 
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.niveau, 'Niveau:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}        
        <div class="col-sm-10"> 
            {{ form_errors(form.niveau) }}
            {{ form_widget(form.niveau) }}
            {{ form_help(form.niveau) }} 
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.libelle, 'Libellé:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}        
        <div class="col-sm-10"> 
            {{ form_errors(form.libelle) }}
            {{ form_widget(form.libelle) }}
            {{ form_help(form.libelle) }} 
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.entreprise, 'Entreprise:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}        
        <div class="col-sm-10"> 
            {{ form_errors(form.entreprise) }}
            {{ form_widget(form.entreprise) }}
            {{ form_help(form.entreprise) }} 
        </div>
    </div>
    {{ form_widget(form.save) }} 
</div>
{{ form_end(form) }}

{% endblock %}