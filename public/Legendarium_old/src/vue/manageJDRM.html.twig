{% extends "base.html.twig" %}
{% block title %} {{ parent() }} - Gerer les JDR{% endblock %}

{% block contenu %}
    <div class="col-md-12">
        <div class="row">
            <form action="index.php?page=managejdrmodif" method="post" enctype="application/x-www-form-urlencoded">
                <div class="form-group">
                    <input type="hidden" id="idJeu" value="{{ form.jdr.idJeu }}" name="idJeu" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="text" id="nomJeu" value="{{ form.jdr.titreJeu }}" name="nomJeu" class="form-control" placeholder="Nom du jeu" required autofocus>
                </div>
                <textarea rows='4'cols='119'class="form-group" name="synopsis" placeholder='Synopsis du jeu'>{{ form.jdr.libelleJeu }}</textarea>
                <div class="form-group">
                    <input type="text" id="nbJoueurMax" name="nbJoueurMax" value="{{ form.jdr.nbJoueurMax }}" class="form-control" placeholder="Nombre de joueurs maximum" required>
                </div>
                <select name="choixAdmin" class="form-group">
                    {% for c in form.choixAdmin %}
                        <option value="{{c.idChoix}}">{{c.libelleChoix}}</option>
                    {% endfor %}
                </select>
                <div class="form-group">
                    <input type="date" id="dateEvenement" value="{{ form.jdr.dateEvenement }}" name="dateEvenement" class="form-control" placeholder="Date" required>
                </div>
                <div class="form-group">
                    <input type="hidden" id="idRoleJeu" name="idRoleJeu" class="form-control" placeholder="idRoleJeu" required>
                </div>
                <div class="form-group form-group-btn">
                    <button type="submit" name="btModifierJDRM" class="btn btn-success btn-lg">Modifier</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %} 

