{% extends "base.html.twig" %}
{% block title %} Administration - Gérer les utilisateurs {% endblock %}
{% block contenu %}
    <h2>Gérer les utilisateurs</h2>
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Prénom</th> 
                <th>Pseudo</th>
                <th>Téléphone</th>        
                <th>Photo</th>
                <th>Rôle</th>
                <th>Editer l'utilisateur</th>
                <th>Supprimer</th>
            </tr>
            {% for u in liste %}
            <tr>
                <td>{{ u.id }}</td>
                <td>{{ u.email }}</td>
                <td>{{ u.nom }}</td>
                <td>{{ u.prenom }}</td>
                <td>{{ u.pseudo }}</td>
                <td>{{ u.telephone }}</td>
                {% if u.photo is not null %}
                <td><img src="images/utilisateurs/{{ u.photo }}" alt="Photo de l'utilisateur" width="50px" height="50px"/></td>
                {% else %}
                <td>L'utilisateur ne possède aucune photo</td>
                {% endif %}
                <td>{% if u.idRole == 1 %} Administrateur {% else %} Client {% endif %}</td>
                <td><a href="index.php?page=utilisateurmodif&id={{ u.id }}"><center><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></center></a></td>
                <td><center><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></center></td>
            </tr>
            {% endfor %}        
        </table>
    </div>
{% endblock %}