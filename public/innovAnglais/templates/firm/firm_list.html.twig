                    <td><a href="{{ path('firm_modify',{'id':value.id})}}">{{ value.nom }}</a></td>
                    <td><input type="checkbox" name="cocher[]" value="{{ value.id }}"/></td>   

                </tr>
            {% endfor %}
        </table>
