{% extends "base.html.twig" %}

{% block title %} Ajouter une Reglement {% endblock %}
{% block contenu %}
    <div class="container">

        <form class="well form-horizontal" action="index.php?page=ajouterReglement" method="post"  id="contact_form">
            <fieldset>
                <legend>Ajouter un règlement</legend>
                <div class="form-group">
                    <label class="col-md-4 control-label">Nom du règlement</label>  
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input  name="typeRegle" placeholder="Nom du Règlement ?" class="form-control"  type="text">
                        </div>
                    </div>
                </div>
                
                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-warning" name="btAjouterReglement">Envoyer<span class="glyphicon glyphicon-send"></span></button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>


    <script src="../../web/js/modules/formAjouterClient.js" type="text/javascript"></script>

{% endblock %}