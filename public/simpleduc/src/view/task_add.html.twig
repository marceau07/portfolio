{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Ajout d'une tâche {% endblock %}

{% block contenu %} <h1> Ajout d'une tâche </h1> 

    {% if form.valide is defined %} 
        {% if form.valide == true %}
             <div style="margin: 0 auto;  text-align: center;">
            <h1>Ajout réussi</h1>
              <a class="h3 mb-3 font-weight-normal" href="index.php?page=taskadd">Ajouter une nouvelle tâche</a><br>
              <a class="h3 mb-3 font-weight-normal" href="index.php?page=task" >Retourner sur la liste des tâches</a>
             </div>
        {% else %} 
            <h1 class="h3 mb-3 font-weight-normal">{{ form.valide.message }}</h1> 
        {% endif %}     
    {% else %}      

        <div class="panel-body">
            <form  class="form-signin" action="index.php?page=taskadd" method="post" enctype="application/x-www-form-urlencoded">

                <label for="labelTask" class="sr-only">Libellé:</label>
                <input type="text" id="labelTask" name="labelTask" class="form-control" placeholder="Saisir le nom" required autofocus>

                <label for="descTask" class="sr-only">Description:</label>
                <input type="text" id="descTask" name="descTask" class="form-control" placeholder="Saisir la description" required >

                <label for="idTeamTask" class="sr-only">Equipe assignée:</label>
                <select name="idTeamTask" class="form-control">
                    <option value="#" disabled selected>Equipe non identifié</option> 
                    {% for t in listeT %}
                        <option value="{{ t.idTeam }}">{{ t.nameTeam }}</option> 
                    {% endfor%}
                </select>

                <label for="costTask" class="sr-only">Prix:</label>
                <input type="number" id="costTask" name="costTask" class="form-control" placeholder="Saisir le prix" required >

                <button class="btn btn-lg btn-primary btn-block" type="submit" name="btAdd">Ajouter la tâche</button>
            </form>
        </div>    
    {% endif %}
{% endblock %} 
