{% extends 'base.html.twig' %}
{% block title %}Modifier un theme !
{% endblock %}
{% block contenu %}
   <div class="container">
 <h1> Modifier un thème </h1>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_label(form.vocabulaires, 'Vocabulaire:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}        
        <div class="col-sm-10"> 
            {{ form_errors(form.vocabulaires) }}
            {{ form_widget(form.vocabulaires) }}
            {{ form_help(form.vocabulaires) }} 
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.libelle, 'Libellé:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}        
        <div class="col-sm-10"> 
            {{ form_errors(form.libelle) }}
            {{ form_widget(form.libelle) }}
            {{ form_help(form.libelle) }} 
        </div>
    </div>
    {{ form_widget(form.save) }} 
</div>
{{ form_end(form) }}

{% endblock %}