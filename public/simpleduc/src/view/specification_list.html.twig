{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Gestion des Ã©quipes {% endblock %}

{% block contenu %} <h1> Gestion des cahiers des charges </h1> 

    {% if form.valide is defined %} 
        {% if form.valide == true %}
            <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
        {% else %}  
            <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1> 
        {% endif %}         
    {% endif %}         

    <div class="panel">
        <!-- Default panel contents -->
        <div class="panel-heading background-violet">Liste des cahiers des charges {% if session.idRoleUser == 2 %}
            - <a href="index.php?page=specificationadd" class="blanc">Ajouter un cahier des charges</a></div>                {% endif %}    


        <!-- Table -->
        <div class="table-responsive">
            <table id="dtBasicExample" class="table table-hover table-striped">
               <thead>   <tr>
                    <th>Contrat</th>
                    <th>Entreprise</th>
                    <th>Fichier</th>
                        {% if session.idRoleUser == 2 %}
                        <th></th>
                        {% endif %}    
                </tr>  </thead>
                {% for s in liste %}
                    <tr>
                        <td>{{s.idContractSpecification}}</td>
                        <td>{{s.idFirmSpecification}}</td>
                        <td>Fichier</td>
                        {% if session.idRoleUser == 2 %}
                            <td><div class="btn-group btn-group-lg"><a href="index.php?page=specification&idContractSpecification={{s.idContractSpecification}}&idFirmSpecification={{s.idFirmSpecification}}"><i class="fas fa-trash"></i></a></div></td></tr> 

                    {% endif %}    
                {% endfor %}    
            </table>
        </div>
    </div>

{% endblock %} 

{% block js %} 
    <script>
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
{% endblock %}