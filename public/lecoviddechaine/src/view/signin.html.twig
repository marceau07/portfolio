{% extends "base.html.twig" %}

{% block title %}Inscription{{ parent() }} {% endblock %}

{% block style %}
    <link href="css/signin.css" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block header %}Inscrivez-vous{% endblock %}

{% block content %} 
    <div class='col text-center'>
        {% if form.valide is defined %} 
            {% if form.valide == true %}
                <div class="alert-success">
                    <span>Inscription r√©ussie !</span>
                    <p class="h3 mb-3 font-weight-normal">Voici votre identifiant : {{form.emailUser}}</p>
                    <p class="h3 mb-3 font-weight-normal"><a href="index.php?page=login">Connectez-vous</a></p>
                </div>
            {% else %} 
                <div class="alert-danger">
                    <span>Echec de l'inscription</span> 
                    <span role="alert">{{ form.message }}</span> 
                    <span><a href="index.php?page=signin">Retourner sur la page d'inscription</a></span>
                </div>
            {% endif %}     
        {% else %}
            <article>
                <form name="signin" id="signin" action="index.php?page=signin" method="post" enctype="application/x-www-form-urlencoded">
                    <section>
                        <h2>Pseudo</h2>
                        <input type="text" id="nicknameUser" name="nicknameUser" class="form-control" placeholder="Pseudonyme..." required autofocus>
                    </section>
                    <section>
                        <h2>Mot de passe</h2>
                        <input type="password" id="passwordUser1" name="passwordUser1" class="form-control" placeholder="Mot de passe" required>
                    </section>
                    <section>
                        <h2>Confirmation</h2>
                        <input type="password" id="passwordUser2" name="passwordUser2" class="form-control" placeholder="Confirmation mot de passe" required>
                    </section>
                    <input type="hidden" id="idRole" name="idRole" value="1" required>
                </form>
            </article>
            <input form="signin" id="btSignin" class="btn btn-md" type="submit" name="btSignin" value="S'inscrire">
            <a href="index.php?page=login">Se connecter</a> 
        {% endif %} 
    </div>
{% endblock %}