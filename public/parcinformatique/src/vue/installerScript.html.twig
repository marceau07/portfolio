{% extends "base.html.twig" %}

{# Page permettant d'installer un script #}

{% block style %}
    <link href="css/style2.css" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block contenu %}
    <div id="content">

        <table id="dtBasicExample" class="table table-striped table-bordered table-responsive-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm">IP
                    </th>
                    <th class="th-sm">MAC
                    </th>
                    <th class="th-sm">Reseau
                    </th>
                    <th class="th-sm">OS
                    </th>
                    <th class="th-sm">Statut
                    </th>
                    <th class="th-sm">Employé
                    </th>
                    <th class="th-sm">Installer sur ce PC ?
                        <div style="float: right">
                            <input type="checkbox" class="custom-control-input" onclick="cocherTout(this.checked);" id="checkboxAll" name="cheboxAll">
                            <label class="custom-control-label" for="checkboxAll">Tout cocher</label>
                        </div>
                    </th>
                </tr>
            </thead>

            <tbody>
                {% for o in listeO %}
                    <tr>
                        <td>{{o.ip}}</td>
                        <td>{{o.mac}}</td>
                        <td>{{o.reseau}}</td>
                        <td>{{o.nomOs}}</td>
                        <td>{{o.nomStatut}}</td>
                        <td>{{o.unEmploye}}</td>
                        <td>
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" onclick="cocher(this.checked);" id="checkbox{{o.idOrdinateur}}" name="chebox{{ o.idOrdinateur }}">
                                <label class="custom-control-label" for="checkbox{{ o.idOrdinateur }}"></label>
                            </div>
                        </td> 
                    </tr>
                {% endfor %}
        </table>
        <form id='installer'>
            <input class='form-control' type='textarea' title='Veuillez saisir le package à installer sur les machines selectionnées...' placeholder='Veuillez saisir le package à installer sur les machines selectionnées...'/>
            <input type='submit' name='btInstaller' value='Installer' class='btn btn-sm btn-warning' id='btInstaller'/>
        </form>
    </div>
    {% block js %}
        <script src="js/checkbox.js" type="text/javascript"></script>
    {% endblock %}
{% endblock %}
