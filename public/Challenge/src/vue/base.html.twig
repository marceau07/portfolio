<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{% block title %}Cabinet du docteur{% endblock %}</title>
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
        <!-- Bootstrap core CSS -->
        <link href="css/bootstrap.min.css" rel="stylesheet">
        <!-- Material Design Bootstrap -->
        <link href="css/mdb.min.css" rel="stylesheet">
        <!-- Your custom styles (optional) -->
        <link href="css/style.css" rel="stylesheet">
        <!-- MDBootstrap Datatables  -->
        <link href="css/addons/datatables.min.css" rel="stylesheet">
    {% block style %}{% endblock %}
</head>

<body>

    <div class="wrapper">

        <nav id="sidebar">
            <!-- Sidebar Header -->
            <div class="sidebar-header">
                <h3>Cabinet du docteur</h3>
            </div>
            <!-- Sidebar Links -->
            <ul class="list-unstyled components">
                <li class="active"><a href="../web">Accueil</a></li>
                    {% if session.email is defined %}
                        {% if session.idRole == 2 %}
                        <li><!-- Link with dropdown items -->
                            <a href="#client" data-toggle="collapse" aria-expanded="false">Clients</a>
                            <ul class="collapse list-unstyled" id="client">
                                <li><a href="index.php?page=clients">Liste clients</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#materiel" data-toggle="collapse" aria-expanded="false">Matériels</a>
                            <ul class="collapse list-unstyled" id="materiel">
                                <li><a href="index.php?page=materiel">Matériels</a></li>
                            </ul>
                        </li>
                    {% endif %}
                    <li><!-- Link with dropdown items -->
                        <a href="#prestation" data-toggle="collapse" aria-expanded="false">Prestations</a>
                        <ul class="collapse list-unstyled" id="prestation">
                            {% if session.idRole == 2 %}
                                <li><a href="index.php?page=prestation">Liste des prestations</a></li>
                                {% endif %}
                            <li><a href="index.php?page=priserdv">Prendre un rendez-vous</a></li>
                            <li><a href="index.php?page=mesrdv">Mes rendez-vous</a></li>
                        </ul>
                    </li>
                    {% if session.idRole == 2 %}
                        <li><!-- Link with dropdown items -->
                            <a href="#activite" data-toggle="collapse" aria-expanded="false">Activités</a>
                            <ul class="collapse list-unstyled" id="activite">
                                <li><a href="index.php?page=activite">Liste des activités</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#reglement" data-toggle="collapse" aria-expanded="false">Règlements</a>
                            <ul class="collapse list-unstyled" id="reglement">
                                <li><a href="index.php?page=reglement">Liste des règlements</a></li>
                            </ul>
                        </li>
                        {#<li>
                            <a href="#pack" data-toggle="collapse" aria-expanded="false">Packs</a>
                            <ul class="collapse list-unstyled" id="pack">
                                <li><a href="index.php?page=pack">Liste des packs disponibles</a></li>
                            </ul>
                        </li>#}
                    {% endif %}
                {% endif %}
            </ul>
            <ul class="list-unstyled items">
                {% if session.email is defined %}
                    <p><a href="index.php?page=deconnexion"><i class="fa fa-times"></i><a href="index.php?page=profile">&nbsp;&nbsp;{{ session.prenom }}</a></p>
                            {% endif %}
            </ul>
        </nav>

        <div id="content">
            <button type="button" id="sidebarCollapse" class="navbar-btn">
                <span></span>
                <span></span>
                <span></span>
            </button> 
            {% block contenu %}

            {% endblock %}
        </div>
</body>

<!-- SCRIPTS -->
<!-- JQuery -->
<script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="js/popper.min.js"></script>
<!-- Bootstrap core JavaScript -->
